---
interface Props {
  href: string
  name: string
  username: string
  Icon: any
  class?: string
}

const { class: className, href, name, username, Icon } = Astro.props
---

<li
  class={`hover:scale-110 transition-all duration-300 ease-in-out group ${className}`}
>
  <a href={href} target="_blank">
    <div
      class="p-4 bg-gray rounded-xl flex justify-center flex-col items-center gap-2 group-hover:bg-white/20 transition-all duration-300 ease-in-out"
    >
      <h4 class="text-primary text-lg font-semibold">{name}</h4>
      <Icon class="text-white w-20 h-20" />
      <p class="text-white text-lg">{username}</p>
    </div>
  </a>
</li>
