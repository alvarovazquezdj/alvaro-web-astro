---
import Biography from '@/components/Biography.astro'
import Contact from '@/components/Contact.astro'
import Landing from '@/components/Landing.astro'
import Layout from '@/layouts/Layout.astro'
---

<Layout title="Alvaro Vazquez">
  <section
    id="top"
    class="flex-1 min-h-auto flex flex-col justify-start xl:justify-center xl:min-h-screen"
  >
    <Landing />
    <Biography />
    <div
      style="position: relative; width: 100%; padding-bottom: 56.25%; height: 0;"
    >
      <iframe
        width="560"
        height="315"
        src="https://www.youtube.com/embed/FSoKQEGNc6g?si=dr5yGyE0JqrnvBjJ"
        title="YouTube video Alvaro Vazquez"
        frameborder="0"
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
        referrerpolicy="strict-origin-when-cross-origin"
        allowfullscreen
        style="position: absolute; top: 0; left: 0; width: 100%; height: 100%;"
      ></iframe>
    </div>
    <Contact />
  </section>
</Layout>
